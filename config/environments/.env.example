# API Keys for Web Search Integrations

# NewsAPI - Get key from https://newsapi.org/register
NEWS_API_KEY=your_newsapi_key_here

# Bing Search API - Get key from Azure Cognitive Services
BING_SEARCH_API_KEY=your_bing_search_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Gmail Inbox Zero Configuration
GMAIL_CREDENTIALS_PATH=./config/gmail_auth.json
GMAIL_TOKEN_PATH=./config/gmail_token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.modify,https://www.googleapis.com/auth/gmail.labels

# API Configuration  
NEXT_PUBLIC_API_URL=http://localhost:8000

# Security
GMAIL_ENCRYPTION_KEY=your_encryption_key_here_32_chars_min

# Development
GMAIL_MOCK_MODE=false
GMAIL_DEBUG_LOGGING=false

# Other environment variables can be added below
